# MongoDB Configuration
MONGODB_URI=your_mongodb_connection_string_here
MONGODB_DB=your_database_name_here

# API Configuration
NEXT_PUBLIC_USE_API=true

# Development Settings
ALLOW_DEV_SEED=true

# Image Search Configuration (Google Custom Search + Gemini)
# Enable image search feature
IMAGE_SEARCH_ENABLED=true

# Google Custom Search API
# Get API key from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLOUD_API_KEY=your_google_cloud_api_key_here

# Custom Search Engine ID (CX)
# Create at: https://programmablesearchengine.google.com/controlpanel/create
CUSTOM_SEARCH_ENGINE_ID=your_custom_search_engine_id_here

# Google AI (Gemini) API
# Get API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini Model (optional, defaults to gemini-2.0-flash)
GEMINI_MODEL=gemini-2.0-flash

# Image Search Rights Filter (optional)
# Options: cc_publicdomain, cc_attribute, cc_sharealike, cc_noncommercial, cc_nonderived
# Example: IMAGE_SEARCH_RIGHTS=cc_publicdomain,cc_attribute
IMAGE_SEARCH_RIGHTS=
